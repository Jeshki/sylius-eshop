{% extends '@SyliusShop/layout.html.twig' %}

{% block content %}
    <section class="ui vertical very padded segment">
        <div class="ui container">
            <div class="ui stackable two column grid middle aligned">
                <div class="column">
                    <div class="ui teal label">{{ 'app.homepage.badge'|trans }}</div>
                    <h1 class="ui header">{{ 'app.homepage.title'|trans }}</h1>
                    <p>
                        {{ 'app.homepage.description'|trans }}
                    </p>
                    <a href="{{ path('sylius_shop_product_index') }}" class="ui large primary button">
                        {{ 'app.homepage.actions.products'|trans }}
                    </a>
                    <a href="{{ path('sylius_admin_dashboard') }}" class="ui large basic button">{{ 'app.homepage.actions.admin'|trans }}</a>
                </div>
                <div class="column">
                    <div class="ui raised segment">
                        <h3 class="ui header">{{ 'app.homepage.quick_start.title'|trans }}</h3>
                        <ol class="ui list">
                            <li><code>cp compose.override.dist.yml compose.override.yml</code></li>
                            <li><code>make init</code></li>
                            <li>{{ 'app.homepage.quick_start.open'|trans }} <code>http://localhost</code></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ui vertical segment">
        <div class="ui container">
            <h2 class="ui header">{{ 'app.homepage.categories.title'|trans }}</h2>
            <div class="ui three stackable cards">
                <a class="card" href="{{ path('sylius_shop_product_index') }}">
                    <div class="content">
                        <div class="header">{{ 'app.homepage.categories.clothes.title'|trans }}</div>
                        <div class="description">{{ 'app.homepage.categories.clothes.description'|trans }}</div>
                    </div>
                </a>
                <a class="card" href="{{ path('sylius_shop_product_index') }}">
                    <div class="content">
                        <div class="header">{{ 'app.homepage.categories.accessories.title'|trans }}</div>
                        <div class="description">{{ 'app.homepage.categories.accessories.description'|trans }}</div>
                    </div>
                </a>
                <a class="card" href="{{ path('sylius_shop_product_index') }}">
                    <div class="content">
                        <div class="header">{{ 'app.homepage.categories.gifts.title'|trans }}</div>
                        <div class="description">{{ 'app.homepage.categories.gifts.description'|trans }}</div>
                    </div>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
